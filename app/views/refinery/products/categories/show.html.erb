<% content_for :body_content_title do %>
  <%= @category.title %>
<% end %>

<% content_for :body do %>
  <section>
    <ul id="products">
      <%= render :partial => '/refinery/products/shared/product', :collection => @products %>
    </ul>

    <%= link_to t('.back_to'), :back %>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="categories">
      <% @products_categories.each do |category| %>
        <li>
          <%= link_to category.title, refinery.products_category_path(category) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
